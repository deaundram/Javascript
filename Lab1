        // Output the value "innerHTML value set" in div with id="output"
        document.getElementById("output").innerHTML = "innerHTML value set";

        // Add a for loop that outputs all values from 1-10
        let valuesOutput = "";
        for (let i = 1; i <= 10; i++) {
            valuesOutput += i + "<br>"; // Concatenate values with <br>
        }
        document.getElementById("values").innerHTML = valuesOutput; 

        // Add a while loop that adds all values from 1-10 together
        let sum = 0;
        let j = 1;
        while (j <= 10) {
            sum += j;
            j++;
        }
        document.getElementById("sum").innerHTML = "Sum of values from 1 to 10 is: " + sum;

        // Create 3 numeric variables a, b, and c
        let a = 5; // given value to a
        let b = 10; // given value to b
        let c = 15; // given value to c

        // Output their sum using document.writeln()
        document.writeln("<br>The sum of a, b, and c is: " + (a + b + c));

        // Compare variables a and b
        if (a < b) {
            document.writeln("<br>a < b");
        } else {
            document.writeln("<br>a > b");
        }
    </script>
